<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
  <columnConstraints>
    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="125.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="348.0" minHeight="10.0" prefHeight="297.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="74.0" minHeight="0.0" prefHeight="51.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <ImageView fx:id="imageView" fitHeight="314.0" fitWidth="301.0" pickOnBounds="true" preserveRatio="true" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
      <ImageView fx:id="videoView" fitHeight="314.0" fitWidth="301.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button fx:id="btn_browseImage" contentDisplay="CENTER" mnemonicParsing="false" onAction="#browseImage" prefHeight="26.0" prefWidth="134.0" text="Browse Image" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
      <Button fx:id="btn_takePic" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#takePicture" text="Take pic from camera" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
      <Button fx:id="btn_activateCamera" mnemonicParsing="false" onAction="#activateCamera" text="Start Camera" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="btn_browseVideo" mnemonicParsing="false" onAction="#browseVideo" text="Browse video" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
   </children>
</GridPane>
